@model ToDoTaskSolution.Entities.Todotask;

<div class="form-group">
    <label asp-for="Name" class="control-label"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Description" class="control-label"></label>
    <input asp-for="Description" class="form-control" />
    <span asp-validation-for="Description" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Date" class="control-label"></label>
    <input asp-for="Date" class="form-control" />
    <span asp-validation-for="Date" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Assignment.CreatedById" class="control-label"></label>
    <select asp-for="Assignment.CreatedById" class="form-control form-select">
        @foreach (var person in ViewBag.People)
        {
            <option class="2" value="@person.Id">@person.Name</option>
        }
    </select>
    <span asp-validation-for="Assignment.CreatedById" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Assignment.AssignedToId" class="control-label"></label>
    <select asp-for="Assignment.AssignedToId" class="form-control">
        @foreach (var person in ViewBag.People)
        {
            <option value="@person.Id">@person.Name</option>
        }
    </select>
    <span asp-validation-for="Assignment.AssignedToId" class="text-danger"></span>
</div>