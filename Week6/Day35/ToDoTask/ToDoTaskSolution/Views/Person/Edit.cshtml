@model ToDoTaskSolution.Entities.Person

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit User</h1>

<h4>Person</h4>
<div>
    <div>
        <form class="form" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group hidden">
                <label hidden asp-for="Id" class="control-label"></label>
                <input asp-for="Id" type="hidden" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <partial name="_PersonForm" model="Model"/>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-create" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="a" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
